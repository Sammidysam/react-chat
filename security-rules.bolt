type User {
    displayName: String,
    email: String,
    photoURL: String,
    uid: String
}

type Message {
    body: String,
    createdAt: String,
    id: Number,
    user: User,
    reactions: Map<String, Number>
}

type Room {
    description: String,
    name: String,
    public: Boolean,
    messages: Message[],
    users: User[]
}

path /users {
    read() { true }
}

path /rooms {
    read() { true }
}

path / {
    read() { auth != null }
    write() { auth != null }
}